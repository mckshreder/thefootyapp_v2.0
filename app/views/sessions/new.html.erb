<%= render partial: "partials/main_nav" %>

<% flash.each do |key, value| %>
    <h4><%= value %></h4>
<% end %>

<div class="main-container">
            <section class="cover fullscreen image-bg overlay">
                <div class="background-image-holder">
                    <img alt="image" class="background-image" src="img/home12.jpg" />
                </div>
                <div class="container v-align-transform">
                    <div class="row">
                        <div class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
                            <div class="feature bordered text-center">
                                <h4 class="uppercase">Login Here</h4>
                                <!-- <form class="text-left">
                                    <input class="mb0" type="text" placeholder="Username" />
                                    <input class="mb0" type="password" placeholder="Password" />
                                    <input type="submit" value="Login" />
                                </form> -->
                                <%= form_for @user, url: create_session_path do |f| %>

                                    <div class="form-group">
                                    <%= f.label :email %>
                                    <%= f.email_field :email, class: "form-control mb0" %>
                                    </div>

                                    <div class="form-group">
                                    <%= f.label :password %>
                                    <%= f.password_field :password, class: "form-control mb0" %>
                                    </div>
                                    
                                    <%= f.submit "Log In", class: "submit-button-create" %>
                                    <%= link_to "Create New Account", new_user_path, class: "submit-button" %>
                                <% end %>

                                <p class="mb0">Forgot your password?
                                    <a href="#">Click Here To Reset</a>
                                </p>
                            </div>
                        </div>
                    </div>
                    <!--end of row-->
                </div>
                <!--end of container-->
            </section>
</div>


